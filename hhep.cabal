  build-depends:       base >=4.8 && <4.9
                     , vector >=0.11 && <0.12
                     , containers >=0.5 && <0.6
                     , cereal >=0.5
                     , semigroups >=0.15
                     , diagrams-lib >=1.3

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
  ghc-prof-options:    -Wall -prof -auto-all -caf-all


executable drawPoints
  main-is:             app/drawPoints.hs
  build-depends:       base >=4.8 && <4.9
                     , vector >=0.11 && <0.12
                     , containers >=0.5 && <0.6
                     , cereal >=0.5
                     , semigroups >=0.15
                     , diagrams-lib >=1.3
                     , diagrams-svg >=1.3
                     , diagrams-pgf >=0.1
                     , palette >=0.1
                     , hhep >=0.1

  default-language:    Haskell2010
  ghc-options:         -Wall
  ghc-prof-options:    -Wall -prof -auto-all -caf-all
